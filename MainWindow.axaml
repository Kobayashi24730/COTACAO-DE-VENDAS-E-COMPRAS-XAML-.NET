<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MeuApp.Views.MainWindow"
        Width="800" Height="500"
        Title="Meu App com Menu e Card">

    <DockPanel>

        <!-- Menu no topo -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Arquivo">
                <MenuItem Header="_Novo" />
                <MenuItem Header="_Abrir" />
                <MenuItem Header="_Sair" />
            </MenuItem>
            <MenuItem Header="_Ajuda">
                <MenuItem Header="_Sobre" />
            </MenuItem>
        </Menu>

        <!-- Grid com duas colunas: 20% e 80% -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>

            <!-- Parte da esquerda (20%) -->
            <Border Grid.Column="0" Background="#EEE" Padding="10">
                <TextBlock Text="Menu lateral ou navegaÃ§Ã£o" 
